@model PharmacyNetwork.Web.ViewModels.MedicalItemViewModel

@{
    ViewData["Title"] = "Изменение данных о товаре";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3 text-center">Изменение данных о товаре</h1>

<h4 class="mb-3">Введите новые данные о товаре</h4>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="MedicalItem.MedItemId"/>
            </div>
            <div class="form-group">
                <label asp-for="MedicalItem.MedItemName" class="control-label"></label>
                <input asp-for="MedicalItem.MedItemName" class="form-control" />
                <span asp-validation-for="MedicalItem.MedItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicalItem.FirmId" class="control-label"></label>
                <select asp-for="MedicalItem.FirmId" class="form-control" asp-items="@Model.Firms"></select>
            </div>
            <div class="form-group">
                <label asp-for="MedicalItem.CategId" class="control-label"></label>
                <select asp-for="MedicalItem.CategId" class="form-control" asp-items="@Model.Categories"></select>
            </div>
            <div class="form-group">
                <label asp-for="MedicalItem.MedItemDescrip" class="control-label"></label>
                <textarea asp-for="MedicalItem.MedItemDescrip" class="form-control"></textarea>
                <span asp-validation-for="MedicalItem.MedItemDescrip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicalItem.MedItemPrice" class="control-label"></label>
                <input asp-for="MedicalItem.MedItemPrice" class="form-control" />
                <span asp-validation-for="MedicalItem.MedItemPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary btn-lg">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
