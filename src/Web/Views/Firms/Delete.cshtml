@model PharmacyNetwork.ApplicationCore.Entities.Firm

@{
    ViewData["Title"] = "Удаление фирмы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3 text-center">Удаление фирмы</h1>

<h4 class="mb-3">Вы уверены, что хотите удалить эту фирму из базы?</h4>

<div>
    <dl class="row justify-content-center">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirmName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirmName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirmAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirmAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirmContact)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirmContact)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirmMarkup)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirmMarkup)
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="FirmId" />
        <input type="submit" value="Удалить" class="btn btn-danger btn-lg" /> |
        <a asp-action="Index" class="btn btn-secondary btn-lg">Вернуться</a>
    </form>
</div>
