@model PharmacyNetwork.ApplicationCore.Entities.Firm

@{
    ViewData["Title"] = "Добавление новой фирмы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3 text-center">Добавление нового товара</h1>

<h4 class="mb-3">Введите данные о товаре</h4>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirmName" class="control-label"></label>
                <input asp-for="FirmName" class="form-control" />
                <span asp-validation-for="FirmName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirmAddress" class="control-label"></label>
                <input asp-for="FirmAddress" class="form-control" />
                <span asp-validation-for="FirmAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirmContact" class="control-label"></label>
                <input asp-for="FirmContact" class="form-control" />
                <span asp-validation-for="FirmContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirmMarkup" class="control-label"></label>
                <input asp-for="FirmMarkup" class="form-control" />
                <span asp-validation-for="FirmMarkup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary btn-lg">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
