@model PharmacyNetwork.Web.ViewModels.PaginationViewModel

<nav aria-label="Page navigation">
    <ul class="pagination">

        <li class="@Model.Previous">
            <a class="page-link" asp-route-pageId="@(Model.ActualPage - 1)">Предыдущая</a>
        </li>

        <li class="page-item disabled"><span class="page-link text-dark" href="#">@(Model.ActualPage + 1) из @Model.TotalPages</span></li>

        <li class="@Model.Next">
            <a class="page-link" asp-route-pageId="@(Model.ActualPage + 1)">Следующая</a>
        </li>
        <li class="page-item disabled">
            <a class="page-link">(Всего: @Model.TotalItems)</a>
        </li>
    </ul>
</nav>